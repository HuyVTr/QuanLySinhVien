@model QuanLySinhVien.Models.Student

@{
    ViewData["Title"] = "Thông tin chi tiết sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Card container for better spacing and aesthetics -->
    <div class="card shadow-lg rounded-4 mx-auto" style="max-width: 800px;">
        <div class="card-body p-4">
            <h2 class="mb-4 text-center fw-bold text-info">Thông tin chi tiết sinh viên</h2>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Mã sinh viên</label>
                    <div class="border p-2 rounded-3">
                        <p class="form-control-plaintext fs-5 fw-semibold">@Model.MaSV</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Giới tính</label>
                    <div class="border p-2 rounded-3">
                        <p class="form-control-plaintext fs-5">@Model.GioiTinh</p>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Họ tên</label>
                    <div class="border p-2 rounded-3">
                        <p class="form-control-plaintext fs-5">@Model.HoTen</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Ngày sinh</label>
                    <div class="border p-2 rounded-3">
                        <p class="form-control-plaintext fs-5">@Model.NgaySinh.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            </div>

            <!-- Hiển thị ảnh sinh viên -->
            <div class="mb-3">
                <label class="form-label">Ảnh sinh viên</label><br />
                @if (!string.IsNullOrEmpty(Model.Hinh))
                {
                    <img src="@Url.Content(Model.Hinh)" class="shadow-sm" width="150" height="150" style="object-fit: cover;" />
                }
                else
                {
                    <span class="text-muted fst-italic">Không có ảnh</span>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Mã ngành</label>
                <div class="border p-2 rounded-3">
                    <p class="form-control-plaintext fs-5">@Model.MaNganh</p>
                </div>
            </div>

            <!-- Nút quay lại danh sách -->
            <div class="text-center">
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
