@model IEnumerable<QuanLySinhVien.Models.Student>

@{
    ViewData["Title"] = "Danh sách sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold">Danh sách sinh viên</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm sinh viên
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded-4">
        <table class="table table-bordered table-hover align-middle text-center bg-white">
            <thead class="table-dark">
                <tr>
                    <th>Mã SV</th>
                    <th>Họ tên</th>
                    <th>Giới tính</th>
                    <th>Ngày sinh</th>
                    <th>Ngành</th>
                    <th>Hình ảnh</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.MaSV</td>
                        <td>@s.HoTen</td>
                        <td>@s.GioiTinh</td>
                        <td>@s.NgaySinh.ToString("dd/MM/yyyy")</td>
                        <td>@s.MaNganh</td>
                        <td>
                            @if (!string.IsNullOrEmpty(s.Hinh))
                            {
                                <img src="@Url.Content(s.Hinh)" width="80" height="80" class="rounded border shadow-sm" />
                            }
                            else
                            {
                                <span class="text-muted fst-italic">Không có ảnh</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@s.MaSV" class="btn btn-info btn-sm me-1" title="Chi tiết">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@s.MaSV" class="btn btn-warning btn-sm me-1" title="Sửa">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@s.MaSV" class="btn btn-danger btn-sm" title="Xoá">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
